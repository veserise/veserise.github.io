extends layout.pug

block content
  block header
    header.card-header.border-success
      div.navbar.navbar-expand.flex-column.flex-md-row.bd-navbar.head-width.mx-auto
        a.navbar-brand.logo(href='/')
          img.d-inline-block.align-top(src='/images/img_03.png', width='100', height='100', alt='')
        ul.navbar-nav.flex-row.ml-md-auto.d-none.d-md-flex
          li.nav-item.mr-2
            img.rounded-circle.img-logo(src='/'+ img.path)
          li.nav-item.mr-3
            label #{user.name}
          li.nav-item.mr-3
            a.card-link(href="/register") 注 册
          li.nav-item.mr-3
            a.card-link(href="/create") 创建投票
          li.nav-item.mr-3
            a.card-link(href="/logout") 退 出

      